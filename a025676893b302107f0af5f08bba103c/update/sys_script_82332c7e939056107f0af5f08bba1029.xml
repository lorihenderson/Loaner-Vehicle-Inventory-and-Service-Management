        <script><![CDATA[(function executeRule(current, previous /*null when async*/) {

	// Add your code here
	var vehicleStatus = current.vehicle_status;
	var grCatalog = new GlideRecord('x_984902_lva_loaner_vehicle_catalog'); // vehicle catalog table

	grCatalog.addQuery('sys_id', current.vehicle);
	grCatalog.query();
	if(grCatalog.next()) {

		if(vehicleStatus=='Pending Release' || vehicleStatus=='Out on Field' || vehicleStatus=='Returned for Inspection' || vehicleStatus=='Sent for Servicing') { 
			grCatalog.status='unavailable'; 
		} else if(vehicleStatus=='Returned to Warehouse') {
		// grCatalog.setValue('status', 'available');
		grCatalog.status='available';
	} else if(vehicleStatus=='Decommissioned') {
		// grCatalog.setValue('status', 'decommissioned');
		grCatalog.status='decommissioned';
	}

	grCatalog.update();
}
})(current, previous);]]></script>
